        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        let userPhone = null; 
        let selectedTpl = 'modern';

onAuthStateChanged(auth, (user) => {
    if (!user) { 
        if (!window.location.href.includes('user.html')) {
            window.location.href = 'user.html'; 
        }
    } else { 
        userPhone = user.phoneNumber;
        window.userPhoneForPayment = userPhone; 
        verifyPayment(); 
    }
});


window.addEventListener('paymentSuccessful', async (e) => {
    const res = e.detail;
    const userRef = doc(db, "users", userPhone);
    
    showStep('templateStep');

    try {
        await updateDoc(userRef, {
            isPremium: true,
            expiryTime: Date.now() + (24 * 60 * 60 * 1000), // 24 Hours for R10
            lastTx: res.reference
        });
        console.log("Payment recorded successfully");
    } catch (err) {
        console.error("Payment successful but database update failed:", err);
    }
});


function verifyPayment() {
    if (!userPhone) return;
    
    onSnapshot(doc(db, "users", userPhone), (snap) => {
        const data = snap.data();
        document.getElementById('loader').classList.add('hidden');
        
        const now = Date.now();
        const isPremium = data?.isPremium && now < data?.expiryTime;
        
        if (isPremium) {
            showStep('templateStep');
        } else {
            showStep('paymentStep');
        }
    }, (error) => {
        console.error("Snapshot error:", error);
    });
}

        window.showStep = (id) => {
            document.querySelectorAll('section').forEach(s => s.classList.add('step-hidden'));
            document.getElementById(id).classList.remove('step-hidden');
        };

        window.selectTemplate = (tpl) => {
            selectedTpl = tpl;
            document.querySelectorAll('.preview-card').forEach(c => c.classList.remove('selected'));
            document.getElementById('t-'+tpl).classList.add('selected');
            document.getElementById('nextBtn').classList.remove('hidden');
            
            const canvas = document.getElementById('cv-canvas');
            const sidebar = canvas.querySelector('.sidebar');
            
            canvas.className = 'bg-white text-slate-900 w-[595px] min-h-[842px] shadow-2xl overflow-hidden transition-all tpl-' + tpl;
            
            if(tpl === 'tech') {
                sidebar.classList.remove('hidden');
            } else {
                sidebar.classList.add('hidden');
            }
        };


        window.goToEditor = () => showStep('editorStep');

        const sync = (id, target) => {
            const el = document.getElementById(id);
            if (el) {
                el.addEventListener('input', (e) => {
                    const targetEl = document.getElementById(target);
                    if (targetEl) targetEl.innerText = e.target.value || "...";
                });
            }
        };
        sync('fName', 'pName'); sync('fRole', 'pRole'); sync('fEmail', 'pEmail'); sync('fPhone', 'pPhone'); sync('fSummary', 'pSummary');

