    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, doc, setDoc, updateDoc, onSnapshot } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";
        import { getAuth, sendSignInLinkToEmail, isSignInWithEmailLink, signInWithEmailLink, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBcp0fkuwhOOyO7fgAlbCoftWwkuog-vwQ",
            authDomain: "quickcv-47c99.firebaseapp.com",
            projectId: "quickcv-47c99",
            storageBucket: "quickcv-47c99.firebasestorage.app",
            messagingSenderId: "541347686112",
            appId: "1:541347686112:web:b821dd7213ab8674959285"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        let currentUser = null;
        let pendingPlan = null;

        // AUTH HANDLERS
        window.openAuthModal = () => document.getElementById('authModal').classList.remove('hidden');
        window.closeAuthModal = () => document.getElementById('authModal').classList.add('hidden');

        // SEND REAL EMAIL LINK
        window.sendOTP = async () => {
            const email = document.getElementById('userEmail').value;
            if(!email.includes('@')) return alert("Enter valid email");
            
            const actionCodeSettings = {
                url: window.location.href,
                handleCodeInApp: true,
            };

            try {
                await sendSignInLinkToEmail(auth, email, actionCodeSettings);
                window.sessionStorage.setItem('emailForSignIn', email); // purely for the session redirect
                alert("Check your inbox! We've sent a login link to " + email);
                closeAuthModal();
            } catch (e) { alert(e.message); }
        };

        // HANDLE REDIRECT FROM EMAIL
        if (isSignInWithEmailLink(auth, window.location.href)) {
            let email = window.sessionStorage.getItem('emailForSignIn');
            if (!email) email = window.prompt('Please confirm your email:');
            
            signInWithEmailLink(auth, email, window.location.href)
                .then(() => {
                    window.sessionStorage.removeItem('emailForSignIn');
                    // URL cleanup
                    window.history.replaceState({}, document.title, window.location.pathname);
                })
                .catch((e) => alert("Login failed: " + e.message));
        }

        // TRACK AUTH STATE (NO LOCALSTORAGE)
        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                setupUserSnapshot(user.email);
            }
        });

        window.startPurchaseFlow = (plan, days) => {
            pendingPlan = { plan, days };
            if (currentUser) {
                processPayment(plan, days);
            } else {
                openAuthModal();
            }
        };

        function setupUserSnapshot(email) {
            const userRef = doc(db, "users", email);
            onSnapshot(userRef, (docSnap) => {
                if (docSnap.exists()) {
                    renderUI(docSnap.data());
                    if(pendingPlan) {
                        processPayment(pendingPlan.plan, pendingPlan.days);
                        pendingPlan = null;
                    }
                } else {
                    setDoc(userRef, { isPremium: false, createdAt: Date.now(), email: email });
                }
            });
        }

        function renderUI(data) {
            const now = Date.now();
            const isPremium = data.isPremium && now < data.expiryTime;
            const banner = document.getElementById('statusBanner');
            const grid = document.getElementById('billingGrid');
            const badge = document.getElementById('premiumBadge');

            if (isPremium) {
                grid.classList.add('hidden');
                banner.classList.remove('hidden');
                badge.classList.replace('hidden', 'flex');
                document.getElementById('expiryText').innerText = `Pro active until: ${new Date(data.expiryTime).toLocaleDateString()}`;
            } else {
                grid.classList.remove('hidden');
                banner.classList.add('hidden');
                badge.classList.replace('flex', 'hidden');
            }
        }

        window.processPayment = function(plan, days) {
            if(!currentUser) return openAuthModal();
            const amount = parseInt(plan.replace(/\D/g, '')) * 100;
            const handler = PaystackPop.setup({
                key: 'pk_test_421d171989e8c850ae50df23425b607cae9fe366',
                email: currentUser.email,
                amount: amount,
                currency: 'ZAR',
                callback: async (response) => {
                    const expiry = Date.now() + (days * 24 * 60 * 60 * 1000);
                    await updateDoc(doc(db, "users", currentUser.email), {
                        isPremium: true,
                        expiryTime: expiry,
                        lastTx: response.reference,
                        updatedAt: Date.now()
                    });
                }
            });
            handler.openIframe();
        };
    </script>
</body>
</html>













