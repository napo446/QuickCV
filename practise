    <script>
        // Logic to handle tier selection and link updates
        function selectTier(amount, btn) {
            // Update UI
            document.querySelectorAll('.tier-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');

            // Update SnapScan Links (Merchant ID must be replaced)
            const merchantID = "YOUR_MERCHANT_ID";
            const snapUrl = `https://pos.snapscan.io/qr/${merchantID}?amount=${amount * 100}`;
            
            document.getElementById('snapLink').href = snapUrl;
            
            // Optional: Update QR Code dynamically
            document.getElementById('qrCode').src = `https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=${encodeURIComponent(snapUrl)}`;
            
            console.log(`System: Donation tier set to R${amount}`);
        }

        function showSuccess() {
            document.getElementById('mainContainer').classList.add('hidden');
            document.getElementById('successState').classList.remove('hidden');
        }

        // Initialize with default R50
        window.onload = () => {
            console.log("QuickCV Donation Engine Active");
        };
    </script>
