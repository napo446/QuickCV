    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, doc, updateDoc, getDoc, setDoc } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";
        import { getAuth, RecaptchaVerifier, signInWithPhoneNumber, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBcp0fkuwhOOyO7fgAlbCoftWwkuog-vwQ",
            authDomain: "quickcv-47c99.firebaseapp.com",
            projectId: "quickcv-47c99",
            storageBucket: "quickcv-47c99.firebasestorage.app",
            messagingSenderId: "541347686112",
            appId: "1:541347686112:web:b821dd7213ab8674959285"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        // CONFIG: STRICK REDIRECTION TARGETS
        const PLAN_CONFIG = {
            "24h": { amount: 1000, target: "ten.html" },
            "30d": { amount: 5000, target: "fifty.html" }
        };

        let currentUser = null;
        let pendingPlan = null;
        let confirmationResult = null;

        window.openAuthModal = () => document.getElementById('authModal').classList.remove('hidden');
        window.closeAuthModal = () => {
            document.getElementById('authModal').classList.add('hidden');
            document.getElementById('phoneStep').classList.remove('hidden');
            document.getElementById('otpStep').classList.add('hidden');
        };

        window.sendOTP = async () => {
            const phone = document.getElementById('userPhone').value;
            if (!phone || phone.length < 10) return alert("Please enter valid phone (+27)");
            if (!window.recaptchaVerifier) {
                window.recaptchaVerifier = new RecaptchaVerifier(auth, 'recaptcha-container', { 'size': 'invisible' });
            }
            try {
                confirmationResult = await signInWithPhoneNumber(auth, phone, window.recaptchaVerifier);
                document.getElementById('phoneStep').classList.add('hidden');
                document.getElementById('otpStep').classList.remove('hidden');
            } catch (error) {
                alert("SMS Error: " + error.message);
            }
        };

        window.verifyOTP = async () => {
            const code = document.getElementById('otpCode').value;
            try {
                await confirmationResult.confirm(code);
            } catch (error) {
                alert("Invalid code.");
            }
        };

        onAuthStateChanged(auth, async (user) => {
            if (!user) {
                currentUser = null;
                document.getElementById('authBtn').classList.remove('hidden');
                return;
            }
            currentUser = user;
            document.getElementById('authBtn').classList.add('hidden');
            closeAuthModal();

            // If user logged in via button while a plan was selected, trigger payment
            if (pendingPlan) {
                processPayment(pendingPlan);
                pendingPlan = null;
            }
        });

        window.startPurchaseFlow = (planCode) => {
            if (currentUser) {
                processPayment(planCode);
            } else {
                pendingPlan = planCode;
                openAuthModal();
            }
        };

        window.processPayment = function(planCode) {
            const config = PLAN_CONFIG[planCode];
            const cleanPhone = currentUser.phoneNumber.replace('+', '');
            const virtualEmail = cleanPhone + "@quickcv.com";

            // PAYSTACK INTEGRATION
            const handler = PaystackPop.setup({
                key: 'pk_test_421d171989e8c850ae50df23425b607cae9fe366',
                email: virtualEmail,
                amount: config.amount,
                currency: 'ZAR',
                callback: async function (response) {
                    // PAYMENT SUCCESSFUL - NO MORE CHECKS, JUST REDIRECT
                    try {
                        const userRef = doc(db, "users", currentUser.uid);
                        
                        // Log payment in DB for record keeping
                        await setDoc(userRef, {
                            phone: currentUser.phoneNumber,
                            lastTx: response.reference,
                            plan: planCode,
                            paidAt: Date.now()
                        }, { merge: true });

                        // DIRECT REDIRECT TO TARGET PAGE
                        window.location.href = config.target;

                    } catch (err) {
                        // Even if DB fails, redirect the user because they paid
                        window.location.href = config.target;
                    }
                },
                onClose: function() {
                    alert("Payment cancelled. You must pay to access the generator.");
                }
            });
            handler.openIframe();
        };
    </script>
</body>
