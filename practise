    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, doc, setDoc, updateDoc, onSnapshot } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBcp0fkuwhOOyO7fgAlbCoftWwkuog-vwQ",
            authDomain: "quickcv-47c99.firebaseapp.com",
            projectId: "quickcv-47c99",
            storageBucket: "quickcv-47c99.firebasestorage.app",
            messagingSenderId: "541347686112",
            appId: "1:541347686112:web:b821dd7213ab8674959285"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);

        // Persistent Unique Identifier
        let userId = localStorage.getItem('qc_enterprise_id');
        if (!userId) {
            userId = 'PRO_' + crypto.randomUUID().split('-')[0].toUpperCase();
            localStorage.setItem('qc_enterprise_id', userId);
        }

        const userRef = doc(db, "users", userId);

        // Real-time Premium State Listener
        onSnapshot(userRef, (doc) => {
            if (doc.exists()) {
                const data = doc.data();
                const now = Date.now();
                
                if (data.isPremium && now < data.expiryTime) {
                    document.getElementById('billingGrid').classList.add('hidden');
                    document.getElementById('statusBanner').classList.remove('hidden');
                    document.getElementById('premiumBadge').classList.replace('hidden', 'flex');
                    
                    const dateObj = new Date(data.expiryTime);
                    document.getElementById('expiryText').innerText = `Unlimited access expires on ${dateObj.toLocaleDateString()} at ${dateObj.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`;
                }
            } else {
                setDoc(userRef, { isPremium: false, createdAt: Date.now(), userId: userId });
            }
        });

        // Paystack Handler
        window.processPayment = function(plan, days) {
            const amount = parseInt(plan.replace(/\D/g, '')) * 100;
            
            const handler = PaystackPop.setup({
                key: 'pk_test_421d171989e8c850ae50df23425b607cae9fe366',
                email: 'customer_' + userId.toLowerCase() + '@quickcv.app',
                amount: amount,
                currency: 'ZAR',
                metadata: { custom_fields: [{ display_name: "Customer ID", variable_name: "uid", value: userId }] },
                callback: async (response) => {
                    const expiry = Date.now() + (days * 24 * 60 * 60 * 1000);
                    await updateDoc(userRef, {
                        isPremium: true,
                        expiryTime: expiry,
                        paymentRef: response.reference,
                        planType: plan,
                        updatedAt: Date.now()
                    });
                    alert("Success! Your professional tools are now unlocked.");
                }
            });
            handler.openIframe();
        };
    </script>
