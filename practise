    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getFirestore, doc, updateDoc, onSnapshot, arrayUnion } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";
        import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBcp0fkuwhOOyO7fgAlbCoftWwkuog-vwQ",
            authDomain: "quickcv-47c99.firebaseapp.com",
            projectId: "quickcv-47c99",
            storageBucket: "quickcv-47c99.firebasestorage.app",
            messagingSenderId: "541347686112",
            appId: "1:541347686112:web:b821dd7213ab8674959285"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        let selectedTpl = 'modern';

        onAuthStateChanged(auth, (user) => {
            if (!user) { 
                window.location.href = 'user.html'; 
            } else { 
                window.userPhoneForPayment = user.phoneNumber; 
                verifySub(user.uid); 
            }
        });

        function verifySub(uid) {
            onSnapshot(doc(db, "users", uid), (snap) => {
                const data = snap.data();
                document.getElementById('loader').classList.add('hidden');
                const isPremium = data?.expiryTime && Date.now() < data.expiryTime;
                if (isPremium) showStep('templateStep');
                else showStep('paymentStep');
            });
        }

        window.addEventListener('paymentSuccessful', async (e) => {
            const res = e.detail;
            const uid = auth.currentUser.uid;
            await updateDoc(doc(db, "users", uid), {
                isPremium: true,
                expiryTime: Date.now() + (24 * 60 * 60 * 1000), 
                lastTx: res.reference
            });
        });

        window.showStep = (id) => {
            document.querySelectorAll('section').forEach(s => s.classList.add('step-hidden'));
            document.getElementById(id).classList.remove('step-hidden');
        };

        window.selectTemplate = (tpl) => {
            selectedTpl = tpl;
            document.querySelectorAll('.preview-card').forEach(c => c.classList.remove('selected'));
            document.getElementById('t-'+tpl).classList.add('selected');
            document.getElementById('nextBtn').classList.remove('hidden');
            const canvas = document.getElementById('cv-canvas');
            canvas.className = 'bg-white text-slate-900 w-[595px] min-h-[842px] shadow-2xl overflow-hidden transition-all tpl-' + tpl;
            const sidebar = canvas.querySelector('.sidebar');
            if(tpl === 'tech') { sidebar.classList.remove('hidden'); updateSidebar(); }
            else { sidebar.classList.add('hidden'); }
        };

        window.goToEditor = () => showStep('editorStep');

        const sync = (id, target) => {
            document.getElementById(id).addEventListener('input', (e) => {
                document.getElementById(target).innerText = e.target.value || "...";
            });
        };
        sync('fName', 'pName'); sync('fRole', 'pRole'); sync('fEmail', 'pEmail'); sync('fPhone', 'pPhone'); sync('fSummary', 'pSummary');

        const updateSidebar = () => {
            const email = document.getElementById('fEmail').value || "email@example.com";
            const phone = document.getElementById('fPhone').value || "000 000 0000";
            document.getElementById('pContactSide').innerHTML = `
                <div style="margin-bottom: 25px;">
                    <p style="text-transform: uppercase; font-size: 10px; font-weight: 800; color: #3b82f6; margin-bottom: 5px;">Contact</p>
                    <p style="font-size: 11px; margin-bottom: 8px;"><i class="fas fa-envelope"></i> ${email}</p>
                    <p style="font-size: 11px;"><i class="fas fa-phone"></i> ${phone}</p>
                </div>`;
        };
        document.getElementById('fEmail').addEventListener('input', updateSidebar);
        document.getElementById('fPhone').addEventListener('input', updateSidebar);
        
        window.generateAndAskCover = async () => {
            const canvas = await html2canvas(document.getElementById('cv-canvas'), { scale: 3 });
            const imgData = canvas.toDataURL('image/png');
            const { jsPDF } = window.jspdf;
            const pdf = new jsPDF({ orientation: 'p', unit: 'mm', format: 'a4' });
            pdf.addImage(imgData, 'PNG', 0, 0, 210, 297);
            pdf.save(`QuickCV_${Date.now()}.pdf`);

            // FIXED: Uses UID instead of userPhone
            const uid = auth.currentUser.uid;
            await updateDoc(doc(db, "users", uid), {
                history: arrayUnion({ type: 'CV_STD', template: selectedTpl, timestamp: Date.now() })
            });
            document.getElementById('coverLetterModal').classList.remove('hidden');
        };
    </script>
</body>
