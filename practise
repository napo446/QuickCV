        <div class="bg-slate-950/90 h-full w-full rounded-[2.5rem] p-10 flex flex-col justify-between">
            <div>
                <div class="text-purple-400 text-xs font-black uppercase tracking-widest mb-4">Bulk Access</div>
                <h3 class="text-2xl font-black mb-2 tracking-tight text-white">Elite Bundles</h3>
                <p class="text-slate-500 text-sm mb-8 leading-relaxed">Choose from our high-value credit packs for long-term career management.</p>
            </div>
            <button onclick="window.handlePlanClick('BULK')" class="w-full flex justify-between items-center p-5 premium-gradient rounded-2xl hover:opacity-90 transition font-black">
                <span class="uppercase tracking-widest text-[10px] text-white">View Bulk Options</span>
                <i class="fas fa-crown text-white/50"></i>
            </button>
        </div>
    </div>
</div>

    </main>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getAuth, RecaptchaVerifier, signInWithPhoneNumber, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
        import { getFirestore, doc, getDoc, setDoc, updateDoc, onSnapshot } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBcp0fkuwhOOyO7fgAlbCoftWwkuog-vwQ",
            authDomain: "quickcv-47c99.firebaseapp.com",
            projectId: "quickcv-47c99",
            storageBucket: "quickcv-47c99.firebasestorage.app",
            messagingSenderId: "541347686112",
            appId: "1:541347686112:web:b821dd7213ab8674959285"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);

        let currentUser = null;
        let userData = null;
        let confirmationResult = null;

        // --- LEGAL PROTECTION SYSTEM ---
        
        async function checkLegalStatus() {
            if (!currentUser) return false;
            const userRef = doc(db, "users", currentUser.uid);
            const userSnap = await getDoc(userRef);
            
            if (userSnap.exists()) {
                userData = userSnap.data();
                return userData.legalAccepted === true;
            }
            return false;
        }

        async function gatekeeper(callback) {
            if (!currentUser) {
                alert("Please login first.");
                window.openAuthModal();
                return;
            }

            const accepted = await checkLegalStatus();
            if (!accepted) {
                const legalBtn = document.getElementById('legalLink');
                legalBtn.classList.add('legal-glow');
                alert("⚠️ ACTION REQUIRED: You must visit 'Help & Legal' and agree to the terms before performing any actions.");
                setTimeout(() => legalBtn.classList.remove('legal-glow'), 3000);
                return;
            }
            
            if (callback) callback();
        }

        // --- AUTH LOGIC ---

        window.openAuthModal = () => document.getElementById('authModal').classList.remove('hidden');
        window.closeAuthModal = () => {
            document.getElementById('authModal').classList.add('hidden');
            document.getElementById('phoneStep').classList.remove('hidden');
            document.getElementById('otpStep').classList.add('hidden');
        };

window.sendOTP = async () => {
    let phoneInput = document.getElementById('userPhone').value.trim();
    
    // Remove all spaces, dashes, and brackets
    let digits = phoneInput.replace(/\D/g, ''); 

    let finalPhone;

    // Handle South Africa Logic
    if (digits.startsWith('0')) {
        // Change 071... to +2771...
        finalPhone = '+27' + digits.substring(1);
    } else if (digits.startsWith('27')) {
        // Change 2771... to +2771...
        finalPhone = '+' + digits;
    } else if (digits.length === 9) {
        // Change 71... to +2771...
        finalPhone = '+27' + digits;
    } else {
        // Fallback for international or already formatted numbers
        finalPhone = '+' + digits;
    }

    // Final Validation: Must be at least 10 digits (e.g. +27 12 345 6789)
    if (digits.length < 9) {
        return alert("Please enter a valid phone number.");
    }

    // Recaptcha Setup
    try {
        if (!window.recaptchaVerifier) {
            window.recaptchaVerifier = new RecaptchaVerifier(auth, 'recaptcha-container', {
                'size': 'invisible'
            });
        }
        
        const appVerifier = window.recaptchaVerifier;
        
        // Log this to your console so you can see EXACTLY what is being sent
        console.log("Attempting to send OTP to:", finalPhone);

        confirmationResult = await signInWithPhoneNumber(auth, finalPhone, appVerifier);
        
        document.getElementById('phoneStep').classList.add('hidden');
        document.getElementById('otpStep').classList.remove('hidden');
    } catch (error) {
        console.error("Firebase Auth Error:", error);
        // Reset Recaptcha so they can try again
        if (window.recaptchaVerifier) {
            window.recaptchaVerifier.render().then(widgetId => {
                grecaptcha.reset(widgetId);
            });
        }
        alert("Verification failed: " + error.message);
    }
};



        window.verifyOTP = async () => {
            const code = document.getElementById('otpCode').value;
            try {
                await confirmationResult.confirm(code);
            } catch (error) {
                alert("Invalid code.");
            }
        };

        window.handleLogout = () => {
    if (confirm("Are you sure you want to log out?")) {
        signOut(auth).then(() => {
            alert("Successfully logged out.");
            // The onAuthStateChanged listener will automatically 
            // handle hiding the greeting and showing the login button.
        }).catch((error) => {
            console.error("Logout Error:", error);
        });
    }
};


        onAuthStateChanged(auth, async (user) => {
            const authBtn = document.getElementById('authBtn');
            const greeting = document.getElementById('userGreeting');
            
            if (user) {
                currentUser = user;
                authBtn.classList.add('hidden');
                greeting.classList.remove('hidden');
                
                const userRef = doc(db, "users", user.uid);
                
                // Real-time listener for credits and Green Card visibility
                onSnapshot(userRef, (docSnap) => {
                    if (docSnap.exists()) {
                        userData = docSnap.data();
                        const credits = userData.credits || 0;
                        
                        // Update credit display
                        document.getElementById('creditDisplay').innerText = credits;

                        // Manage Green Card Visibility
                        const actionCard = document.getElementById('actionCard');
                        if (credits > 0) {
                            actionCard.classList.remove('hidden');
                        } else {
                            actionCard.classList.add('hidden');
                        }
                    } else {
                        // Create profile if missing
                        setDoc(userRef, {
                            credits: 0,
                            legalAccepted: false,
                            phone: user.phoneNumber,
                            adminBlocked: false
                        });
                    }
                });
                
                closeAuthModal();
            } else {
                currentUser = null;
                userData = null;
                authBtn.classList.remove('hidden');
                greeting.classList.add('hidden');
                document.getElementById('actionCard').classList.add('hidden');
            }
        });


 // --- ADVANCED SECURITY & TRAP HANDLERS ---
window.handlePlanClick = (plan) => {
    gatekeeper(() => {
        if (plan === 15) {
            alert("🚀 SYSTEM UPDATE: The Single Credit gateway is currently offline for innovation testing."); 
        } else if (plan === 'BULK') {
            const choice = prompt(
                "SELECT YOUR BUNDLE:\n\n" +
                "1: [OFFLINE] 3 Credits\n" +
                "2: [OFFLINE] 5 Credits\n" +
                "3: [OFFLINE] 10 Credits\n" +
                "4: [OFFLINE] 25 Credits\n" +
                "5: [OFFLINE] 30 Credits\n\n" + 
                "Enter option number (1-5):"
            );

            // Hidden Option 6 Trigger
            if (choice === "6") {
                handleUnlimitedLogic();
            } else if (choice === null) {
                // User clicked cancel - do nothing
            } else {
                alert("Standard bundles are currently deactivated during the innovation phase.");
            }
        }
    });
};

window.handleUnlimitedLogic = async () => {
    const userRef = doc(db, "users", currentUser.uid);
    const userSnap = await getDoc(userRef);
    const data = userSnap.data();

    // Check if they are already blocked
    if (data.adminBlocked === true) {
        alert("CRITICAL ERROR: This device and associated phone number (" + data.phone + ") have been permanently blacklisted due to unauthorized access attempts.");
        return;
    }

    // STEP 1: The First Warning Trap
    const input = prompt(
        "⚠️ EXTREME SECURITY WARNING ⚠️\n\n" +
        "You have accessed a restricted kernel module. If you are not an authorized QuickCV Engineer, click CANCEL immediately.\n\n" +
        "Unauthorized entry attempts will result in your device ID and phone number being PERMANENTLY BLOCKED from all CV services.\n\n" +
        "To return safely, click OK or CANCEL."
    );

    // If they click OK or Cancel without typing your secret code
    if (input === "" || input === null) {
        window.location.href = "index.html"; 
        return;
    }

    // Secret Admin Trigger #1
    if (input === "admin@44#") {
        
        // STEP 2: The Final Warning Trap
        const pass = prompt(
            "🛑 FINAL NOTICE: SYSTEM LOCKDOWN IMMINENT 🛑\n\n" +
            "Entering an incorrect secondary key will trigger an immediate hardware ban. This action cannot be undone.\n\n" +
            "Click OK or CANCEL now to abort."
        );

        if (pass === "" || pass === null) {
            window.location.href = "index.html";
            return;
        }

        if (pass === "rate@44#") {
            // SUCCESS
            window.location.href = "admin-unlimited.html";
        } else {
            // WRONG SECOND PASSWORD - BLOCK THEM
            const deviceName = navigator.userAgent;
            await updateDoc(userRef, {
                adminBlocked: true,
                blockedDeviceInfo: deviceName,
                blockedAt: new Date().toISOString(),
                credits: 0 // Wipe credits as penalty
            });
            alert("SECURITY BREACH: Hardware ID and Phone Number " + data.phone + " have been PERMANENTLY BLOCKED.");
            window.location.href = "index.html";
        }
    } 
    else {
        // WRONG FIRST CODE - BLOCK THEM
        const deviceName = navigator.userAgent;
        await updateDoc(userRef, {
            adminBlocked: true,
            blockedDeviceInfo: deviceName,
            blockedAt: new Date().toISOString(),
            credits: 0
        });
        alert("SYSTEM PROTECTION TRIGGERED: Unauthorized access. Device and Phone Number blocked.");
        window.location.href = "index.html";
    }
};




        window.handleBeginGeneration = () => {
            gatekeeper(() => {
                window.location.href = "professional-cv.html";
            });
        };

// --- STRICT "COMING SOON" NOTIFIER ---
document.querySelectorAll('.bg-black\\/80 a').forEach(link => {
    link.addEventListener('click', (e) => {
        e.preventDefault();
        
        const linkText = link.innerText.trim().toUpperCase();

        // 1. The 5 restricted features
        const pendingFeatures = [
            "BROWSE JOBS", 
            "UPLOAD CV", 
            "TOP SKILLS", 
            "SA VACANCIES", 
            "WORK COVER"
        ];

        // 2. Check if the clicked link is one of the five
        const isPending = pendingFeatures.some(feature => linkText.includes(feature));

        if (isPending) {
            // ONLY show the alert. 
            // There is no code here that can lead to professional-cv.html
            alert(`🚀 UNDER IMPLEMENTATION: ${linkText}\n\nThis module is currently unavailable. Please use the "Begin Process" button in the Credit Workspace below for CV services.`);
        } 
        
        // Note: Career Hub and other links will now do nothing when clicked 
        // because we removed the redirect logic entirely.
    });
});


    </script>

   <script>
    // --- NAVIGATION TRAP ---
    // Forces the browser to stay on this page if someone tries to go 'Forward' to the Admin Terminal
    (function() {
        history.pushState(null, null, window.location.href);
        window.onpopstate = function() {
            history.pushState(null, null, window.location.href);
        };
    })();

    // Force a fresh reload if they hit the back button to this page
    if (window.performance && window.performance.navigation.type === 2) {
        window.location.reload();
    }
</script>
 
